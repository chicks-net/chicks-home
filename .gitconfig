[user]
	name = Christopher Hicks
	email = chicks.net@gmail.com
[core]
	autocrlf = input
;	autocrlf = false
	safecrlf = true
	excludesfile = /home/chicks/.gitignore_global

[alias]
	ack = ! git ls-files $GIT_PREFIX | ack -x
	add = add --verbose
	co = checkout
	pushup = ! git push -u origin HEAD
	ci = commit
	cim = "!f() { branch=$(git symbolic-ref --short HEAD); if echo \"$branch\" | grep -vE '^(main|master)$' >/dev/null; then git commit -m \"$@\"; else printf \"\\033[31mError: Cannot commit directly to '%s' branch. Use 'just branch <name>' to create a feature branch.\\033[0m\\n\" \"$branch\" >&2; return 1; fi; }; f"
	st = status
	stp = status --porcelain
	dc = diff --cached
	br = branch
	hist = log --graph --pretty=format:\"%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset\" --abbrev-commit
	hh = hist -n 15
	type = cat-file -t
	dump = cat-file -p
	undo = checkout --

[push]
	default = simple

[color]
	diff = auto
	ui = yes

[transfer] 
	fsckobjects = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
